@{
    ViewData["Title"] = "Main table of Measurments";
}
@*"" cellpadding="3" cellspacing="20"*@
@*border: 1px solid black; table-layout: auto;*@

<h1>@ViewBag.Title</h1>

<a asp-controller="measurment" asp-action="add">Add Measurment</a>
<table border ="1" align="center" table-layout="auto">
    <tr>
        <th text-align="center">ID</th>     @*this text align won't work :(*@
        <th align="center">Sensor ID</th="center">
        <th align="center">Pm_1_0</th>
        <th align="center">Pm_2_5</th>
        <th align="center">Pm_10</th>
        <th align="center">Temperature</th>
        <th align="center">Humidity</th>
        <th text-align="center">Time</th>
        <th align="center">Action</th>
    </tr>
    @foreach (var measurment in ViewBag.measurments)
    {
        <tr>
            <td>@measurment.Id</td>
            <td>@measurment.sensorId</td>
            <td>@measurment.pm_1_0</td>
            <td>@measurment.pm_2_5</td>
            <td>@measurment.pm_10</td>
            <td>@measurment.temp</td>
            <td>@measurment.hum</td>
            <td>@measurment.time</td>
            <td>
                <a asp-controller="measurment" asp-action="edit" asp-route-id="@measurment.Id">Edit</a>
                or
                <a asp-controller="measurment" asp-action="delete" asp-route-id="@measurment.Id" onclick="return confirm('Are you sure?')">Delete</a>
            </td>
        </tr>

    }
</table>




<p>@ViewBag.Description</p>
<body>
    <img src="~/data/images/OfficeLayoutWithIDs.png" alt="Workplace" usemap="#workmap" />

    <map name="workmap">
        <area shape="rect" coords="140,320,180,380" alt="Computer" href="@Url.Action("ReturnMeasurements", "Home")?id=1">
        <area shape="rect" coords="190,320,290,380" alt="Phone" href="@Url.Action("ReturnMeasurements", "Home")?id=2">
    </map>
</body>