@model SensorMobCRUD.Models.Measurment

@*@{
    ViewData["Title"] = "Add";
}*@

<h2>Edit</h2>

<form method="post" asp-controller="measurment" asp-action="edit">
    <table>

        <tr>
            <td>sensorId</td>
            <td>
                <input type="number" asp-for="sensorId" required="required" readonly />
            </td>
        </tr>
        <tr>
            <td>pm_1_0</td>
            <td>
                <input type="number" asp-for="pm_1_0" min="0" required="required" />
            </td>
        </tr>
        <tr>
            <td>pm_2_5</td>
            <td>
                <input type="number" asp-for="pm_2_5" min="0" required="required" />
            </td>
        </tr>
        <tr>
            <td>pm_10</td>
            <td>
                <input type="number" asp-for="pm_10" min="0" required="required" />
            </td>
        </tr>
        <tr>
            <td>Temperature</td>
            <td>
                <input type="number" step="0.01" asp-for="temp" min="-50" max="50" required="required" />
            </td>
        </tr>
        <tr>
            <td>Humidity</td>
            <td>
                <input type="number" step="0.01" asp-for="hum" min="0" max="100" required="required" />
            </td>
        </tr>
        <tr>
            <td>Time of the measurment</td>
            <td>
                <input type="datetime-local" asp-for="time" min="0008-06-07 00:00" max="9999-06-14 00:00" required="required" />
            </td>
        <tr>
            <td>&nbsp;</td>
            <td>


                <input type="submit" value="Save" asp-action="edit" />
            </td>
        </tr>
    </table>
</form>

